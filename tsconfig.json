{
  "compilerOptions": {
    "target": "ES2022", // Target JavaScript version
    "module": "commonjs", // Module system (commonjs for Node.js)
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable ES module interop
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "typeRoots": ["./node_modules/@types", "./src/types"] // Include custom types
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
